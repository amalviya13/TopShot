{
  "manifest_version": 2,
 
  "name": "Top Shot Notifications",
  "version": "0.1.0",

  "permissions": [
    "activeTab",
    "tabs", 
    "storage",
    "https://nbatopshot.com/*",
    "http://localhost/*"
  ],

  "content_scripts": [{
    "js": ["contentscript.js"],
    "matches": [ "https://nbatopshot.com/*", "http://localhost/*"]
  }],

  "background" : {
    "scripts" : ["backgroundscript.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
  
}