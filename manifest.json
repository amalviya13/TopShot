{
  "manifest_version": 2,
 
  "name": "Top Shot Notifications",
  "version": "0.1.0",

  "permissions": [
    "activeTab",
    "tabs", 
    "storage",
    "https://nbatopshot.com/*"
  ],

  "content_scripts": [{
    "js": ["contentscript.js"],
    "matches": [ "https://nbatopshot.com/*"]
  }],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
  
}